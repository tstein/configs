#!/bin/zsh

for pak in `flatpak list --app --columns=application | grep -v "Application ID"`; do
  local name=`print $pak | rev | cut -d . -f 1 | rev | tr 'A-Z' 'a-z'`
  local runner=~/.local/bin/$name
  if [[ ! -e $runner ]]; then
    cat >$runner <<EOF
#!/bin/zsh
# flatpak runner generated by flatpak-runners
flatpak run $pak
EOF
  fi
  chmod +x $runner
done
